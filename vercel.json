{
    "functions": {
      "api/index.php": {
        "runtime": "vercel-php@0.7.3"
      }
    },
    "routes": [
    {
        "src": "/api/index.php",
        "dest": "/api/index.php"
    },
    { 
        "src": "/(.*)", 
        "dest": "/api/index.php" 
     }
    ],
    "env": {
      "PG_HOST": "your-database-host",
      "PG_PORT": "5432",
      "PG_DB": "your-db-name",
      "PG_USER": "your-db-user",
      "PG_PASSWORD": "your-db-password"
    }
  }
  